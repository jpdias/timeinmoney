<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:clickable="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/home"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:minHeight="64dip"
        android:minWidth="60dip"
        android:text="Home"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/newevent"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/statistics"
        android:layout_alignRight="@+id/home"
        android:layout_below="@+id/home"
        android:minHeight="64dip"
        android:minWidth="60dip"
        android:text="New Event"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/statistics"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home"
        android:layout_alignRight="@+id/home"
        android:layout_below="@+id/newevent"
        android:minHeight="64dip"
        android:minWidth="64dip"
        android:text="Statistics"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <Button
        android:id="@+id/about"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/statistics"
        android:layout_alignRight="@+id/statistics"
        android:layout_below="@+id/statistics"
        android:minHeight="64dip"
        android:text="About"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignRight="@+id/newevent"
        android:layout_alignTop="@+id/newevent"
        android:background="#444444" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignLeft="@+id/statistics"
        android:layout_alignTop="@+id/statistics"
        android:background="#444444" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignLeft="@+id/about"
        android:layout_below="@+id/about"
        android:background="#444444" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dip"
        android:layout_alignLeft="@+id/home"
        android:layout_alignTop="@+id/home" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignBottom="@+id/statistics"
        android:layout_alignLeft="@+id/statistics"
        android:background="#444444" />

    <Button
        android:id="@+id/exit"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view1"
        android:layout_alignRight="@+id/view1"
        android:layout_below="@+id/view1"
        android:minHeight="64dip"
        android:text="Exit"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_alignLeft="@+id/exit"
        android:layout_below="@+id/exit"
        android:background="#444444" />

</RelativeLayout>