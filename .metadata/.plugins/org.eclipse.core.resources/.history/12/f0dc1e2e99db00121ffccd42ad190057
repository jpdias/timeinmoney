package com.toostronk.timeinmoney;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;

import android.content.Context;
import android.view.View.OnClickListener;

public class InternalStorage {
	
		 
		   private InternalStorage() {}
		 
		   public static void writeObject(OnClickListener onClickListener, String key, Object object) throws IOException {
		      FileOutputStream fos = ((Context) onClickListener).openFileOutput(key, Context.MODE_PRIVATE);
		      ObjectOutputStream oos = new ObjectOutputStream(fos);
		      oos.writeObject(object);
		      oos.close();
		      fos.close();
		   }
		 
		   public static Object readObject(Context context, String key) throws IOException,
		         ClassNotFoundException {
		      FileInputStream fis = context.openFileInput(key);
		      ObjectInputStream ois = new ObjectInputStream(fis);
		      Object object = ois.readObject();
		      return object;
		   }
		}
